{
  "version": 3,
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_headers": [
        "Accept-Language",
        "Content-Type",
        "Authorization",
        "Accept",
        "Origin"
      ],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false,
      "is_collection": true
    },
    "router": {
      "auto_options": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/post",
      "backend": [
        {
          "host": "http://localhost:8081",
          "method": "GET",
          "url_pattern": "/",
          "encoding": "json",
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/post",
      "method": "POST",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "audience": [
            "https://dev-nydlolpi6mfz5eo3.eu.auth0.com/api/v2/"
          ],
          "jwk_url": "https://dev-nydlolpi6mfz5eo3.eu.auth0.com/.well-known/jwks.json"
        }
      },
      "backend": [
        {
          "host": "http://localhost:8081",
          "method": "POST",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/post/posts/{userId}",
      "backend": [
        {
          "host": "http://localhost:8081",
          "method": "GET",
          "url_pattern": "/posts/{userId}",
          "encoding": "json",
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/user",
      "backend": [
        {
          "host": "http://localhost:8082",
          "method": "GET",
          "url_pattern": "/",
          "encoding": "json",
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "POST",
      "backend": [
        {
          "host": "http://localhost:8082",
          "method": "POST",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/user/check/{email}",
      "method": "GET",
      "backend": [
        {
          "host": "http://localhost:8082",
          "method": "GET",
          "url_pattern": "/check/{email}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/user/{id}",
      "backend": [
        {
          "host": "http://localhost:8082",
          "method": "GET",
          "url_pattern": "/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/user/change-username",
      "method": "POST",
      "backend": [
        {
          "host": "http://localhost:8082",
          "method": "POST",
          "url_pattern": "/change-username",
          "encoding": "json"
        }
      ]
    }
  ]
}