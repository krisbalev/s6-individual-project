{
    "version": 3,
    "extra_config": {
      "security/cors": {
        "allow_origins": ["*"],
        "allow_methods": ["GET", "HEAD", "POST", "PUT", "DELETE", "OPTIONS"],
        "expose_headers": ["Content-Length", "Content-Type"],
        "allow_headers": ["Accept-Language", "Content-Type", "Authorization", "Accept", "Origin"],
        "max_age": "12h",
        "allow_credentials": false,
        "debug": false
      },
      "router": {
        "auto_options": true
      }
    },
    "endpoints": [
      {
        "endpoint": "/post",
        "method": "GET",
        "backend": [
          {
            "host": "http://post-service:8081",
            "method": "GET",
            "url_pattern": "/",
            "encoding": "json",
            "is_collection": true
          }
        ]
      },
      {
        "endpoint": "/post",
        "method": "POST",
        "backend": [
          {
            "host": "http://post-service:8081",
            "method": "POST",
            "url_pattern": "/",
            "encoding": "json"
          }
        ]
      },
      {
        "endpoint": "/user",
        "method": "GET",
        "backend": [
          {
            "host": "http://user-service:8082",
            "method": "GET",
            "url_pattern": "/",
            "encoding": "json",
            "is_collection": true
          }
        ]
      },
      {
        "endpoint": "/user",
        "method": "POST",
        "backend": [
          {
            "host": "http://user-service:8082",
            "method": "POST",
            "url_pattern": "/",
            "encoding": "json"
          }
        ]
      }
    ]
  }